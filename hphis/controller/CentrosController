package com.hphis.controller;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import org.springframework.web.servlet.ModelAndView;

import com.hphis.pojo.Centros;
import com.hphis.service.CentrosService;

public class CentrosController {

	private CentrosService centrosService;

	public void setCentrosService(CentrosService centrosService) {
		this.centrosService = centrosService;
	}

	public ModelAndView getCentros(HttpServletRequest request, HttpServletResponse response) throws Exception {
		List<Centros> centros = centrosService.getAllCentros();
		Map params = new HashMap<>();
		params.put("centrosList", centros);
		return new ModelAndView("getCentros", params);
	}
}
